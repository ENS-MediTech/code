        <th>Etape</th>
        <th>Km</th>
        <th>Situation</th>
        <th>Nb Justificatifs</th>
    </tr>

    <?php
    // Supposons que vous récupérez les données depuis la base de données ici
    // Remplacez les valeurs ci-dessous par les valeurs réelles que vous récupérez de la base de données

    $donneesVisiteur = [
        "repas" => 10,
        "nuitee" => 5,
        "etape" => 3,
        "km" => 150,
        "situation" => "valide",
        "justificatifs" => 8
    ];

    // Affichage des données dans le tableau
    echo "<tr>";
    foreach ($donneesVisiteur as $valeur) {
        echo "<td>$valeur</td>";
    }
    echo "</tr>";
    ?>
